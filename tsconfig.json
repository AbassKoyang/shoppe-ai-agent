{
    "compilerOptions": {
      "target": "es2022",
      "module": "esnext",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "noEmit": true,
      "outDir": "dist"
    },
    "include": ["src/**/*"]
  }